<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lead.mapper.CustomerLeadMapper">
    
    <!-- 结果映射 -->
    <resultMap id="CustomerLeadResultMap" type="com.example.lead.entity.CustomerLead">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="audit_status" property="auditStatus" jdbcType="VARCHAR"/>
        <result column="source" property="source" jdbcType="VARCHAR"/>
        <result column="salesperson_id" property="salespersonId" jdbcType="BIGINT"/>
        <result column="salesperson_name" property="salespersonName" jdbcType="VARCHAR"/>
        <result column="last_follow_up_at" property="lastFollowUpAt" jdbcType="TIMESTAMP"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        id, name, phone, status, audit_status, source, 
        salesperson_id, salesperson_name, last_follow_up_at, 
        created_at, updated_at
    </sql>
    
    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultMap="CustomerLeadResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM customer_leads
        WHERE id = #{id}
    </select>
    
    <!-- 根据手机号查询 -->
    <select id="selectByPhone" parameterType="java.lang.String" resultMap="CustomerLeadResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM customer_leads
        WHERE phone = #{phone}
    </select>
    
    <!-- 分页查询客资列表 -->
    <select id="selectLeads" resultMap="CustomerLeadResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM customer_leads
        <where>
            <if test="salespersonId != null">
                AND salesperson_id = #{salespersonId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY created_at DESC
        LIMIT #{offset}, #{limit}
    </select>
    
    <!-- 查询客资总数 -->
    <select id="countLeads" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM customer_leads
        <where>
            <if test="salespersonId != null">
                AND salesperson_id = #{salespersonId}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>
    
    <!-- 插入客资 -->
    <insert id="insert" parameterType="com.example.lead.entity.CustomerLead" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO customer_leads
        (name, phone, status, audit_status, source, 
         salesperson_id, salesperson_name, last_follow_up_at, 
         created_at, updated_at)
        VALUES
        (#{name}, #{phone}, #{status}, #{auditStatus}, #{source},
         #{salespersonId}, #{salespersonName}, #{lastFollowUpAt},
         #{createdAt}, #{updatedAt})
    </insert>
    
    <!-- 更新客资 -->
    <update id="update" parameterType="com.example.lead.entity.CustomerLead">
        UPDATE customer_leads
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="status != null">status = #{status},</if>
            <if test="auditStatus != null">audit_status = #{auditStatus},</if>
            <if test="source != null">source = #{source},</if>
            <if test="salespersonId != null">salesperson_id = #{salespersonId},</if>
            <if test="salespersonName != null">salesperson_name = #{salespersonName},</if>
            <if test="lastFollowUpAt != null">last_follow_up_at = #{lastFollowUpAt},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>
    
    <!-- 删除客资 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM customer_leads
        WHERE id = #{id}
    </delete>
    
    <!-- 批量更新审核状态 -->
    <update id="batchUpdateAuditStatus">
        UPDATE customer_leads
        SET audit_status = #{auditStatus}, updated_at = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    
</mapper>